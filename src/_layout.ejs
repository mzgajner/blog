<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400italic,700italic,400,700">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css">
  <link rel="stylesheet" href="main.css">
  <title>Document</title>
</head>
<body>
  <nav class="navbar is-dark">
    <div class="container">
      <div class="navbar-brand">
        <% for(var slug in public._data){ %>
          <a
            href="<%= public._data[slug].link %>"
            class="navbar-item<%= public._data[slug].link === link ? ' is-active' : ' is-disabled' %>"
          >
            <%= public._data[slug].title %>
          </a>
        <% }; %>
      </div>
    </div>
  </nav>

  <section class="section">
    <div class="container content">
      <% if (showTitle) { %>
        <h1 class="title"><%= title %></h1>
      <% } %>
      <% if (date) { %>
        <p>
          <strong>Post date:</strong>
          <time datetime="<%= date %>">
            <% dateObj = new Date(date); %>
            <%= dateObj.toLocaleString('en-US', { month: "long" }) + ' ' + dateObj.getDay() + ', ' + dateObj.getFullYear(); %>
          </time>
        </p>
      <% } %>
      <%- yield %>
    </div>
  </section>
</body>
</html>
